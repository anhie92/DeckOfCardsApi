@model DeckOfCards.Models.DrawApi



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.success)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deck_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.remaining)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>


        <tr>
            <td>
                @*@Html.DisplayFor(model => model.success)*@
                @Model.success.ToString()
            </td>
            <td>
                @Html.DisplayFor(model => model.deck_id)
            </td>
            <td>
                @Html.DisplayFor(model => model.remaining)
            </td>


        </tr>

</table>


<h1>Cards Drawn</h1>


    @foreach (var item in Model.cards)
        {
            <table class="table">
                <thead>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(modelItem => item.code)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.code)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(modelItem => item.value)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.value)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(modelItem => item.suit)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.suit)
                        </dd>


                    </dl>
                    </thead>
                </table>
}
@foreach (var item in Model.cards)
{
    <a href="@item.image" target="_blank"><img src="@item.image" /></a>
}
<br />
<br />
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Draw", "DeckOfCards",new { id = Model.deck_id } )'">Draw Five Cards</button>